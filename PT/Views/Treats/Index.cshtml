@using PT.Models;
@{
    Layout = "_Layout";
}

<h1>List of Treats</h1>
<hr />

<h3>Treats:</h3>
@if (@Model.Count == 0)
{
    <h3>No treats have been added yet!</h3>
}
@foreach (Treat treat in Model)
{
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId}) </li>
}
<hr />
<div>@Html.ActionLink("Add New Treat", "Create", null, null, new {@class="btn btn-dark btn-sm"})</div>