@using PT.Models;
@{
    Layout = "_Layout";
}

<h1>FlavorTown</h1>
<hr />
@if (@Model.Count == 0)
{
    <h3>No flavors populate FlavorTown.</h3>
}
@foreach (Flavor flavor in Model)
{
    <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId}) </li>
}
<br>
<p>@Html.ActionLink("Add new flavor", "Create", null, null, new {@class="btn btn-dark btn-sm"})</p>